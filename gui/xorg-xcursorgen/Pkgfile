# Depends on: xorg-libx11 xorg-libxcursor libpng

description="The Xorg applications provide the applications available in X Window implementations."
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

PKGMK_GROUPS=(doc man)
url="http://xorg.freedesktop.org"

name=xorg-xcursorgen
version=1.0.6
release=1
_name=${name/xorg-/}

source=(http://ftp.x.org/pub/individual/app/${_name}-$version.tar.bz2)

build() {
cd ${_name}-$version
./configure --prefix=/usr --disable-static
make DESTDIR=$PKG install
}


