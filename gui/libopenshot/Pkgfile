# Depends on: python ffmpeg x264 json-cpp qtmultimedia cmake swig doxygen libopenshot-audio 

description="A high quality, open-source video library for C++ and Python"
url="http://openshot.org/"
packager="tnut <tnut@nutyx.org>"

name=libopenshot
version=0.2.0
release=1
PKGMK_KEEP_SOURCES="no"

source=(https://github.com/OpenShot/$name/archive/v$version.tar.gz
		ffmpeg-4.0.patch)

build() {
cd $name-$version
patch -p1 -i $SRC/ffmpeg-4.0.patch
sed -i \
	-e 's#FF_INPUT_BUFFER_PADDING_SIZE#AV_INPUT_BUFFER_PADDING_SIZE#g' \
	-e 's#CODEC_FLAG_GLOBAL_HEADER#AV_CODEC_FLAG_GLOBAL_HEADER#g' \
	src/FFmpegWriter.cpp src/FFmpegReader.cpp
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DMAGICKCORE_HDRI_ENABLE=1 -DMAGICKCORE_QUANTUM_DEPTH=16 \
	      -DUSE_SYSTEM_JSONCPP=ON -DENABLE_RUBY=OFF ../
make
make DESTDIR=$PKG install
}
