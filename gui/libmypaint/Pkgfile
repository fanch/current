# Depends on: gtk3 json-c pkg-config gobject-introspection gegl

description="A fast and easy painting library for digital painters, with brush dynamics"
url="http://mypaint.intilinux.com/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B, RÃ©my"

name=libmypaint
version=1.3.0
release=1
source=(https://github.com/mypaint/$name/releases/download/v$version/$name-$version.tar.xz)

build() { 
  cd $SRC/$name-$version
  sed -i 's|gegl-0.3|gegl-0.4|g' gegl/libmypaint-gegl.pc.in gegl/Makefile.am configure.ac
  sed -i 's|Gegl-0.3|Gegl-0.4|g' gegl/Makefile.am
  sed -i 's|po/Makefile\.in|po/Makefile|g' configure.ac
  echo -e '# INTLTOOL_MAKEFILE\nall:\ninstall:' > po/Makefile.in
  ./configure --prefix=/usr --enable-gegl
  make
  make DESTDIR=$PKG install
}
