name=libmypaint
version=1.3.0
release=2
source=(https://github.com/mypaint/$name/releases/download/v$version/$name-$version.tar.xz)

build() { 
  cd $SRC/$name-$version
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
}
