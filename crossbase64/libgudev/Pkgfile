# description	: GObject bindings for libudev
# depends	: glib

name=libgudev
version=232
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--libdir=/usr/lib64 \
		--disable-umockdev
	make
	make DESTDIR=$PKG install
}
