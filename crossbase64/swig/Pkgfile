# description	: Generate scripting interfaces to C/C++ code
# homepage	: http://www.swig.org/
# depends	: pcre

name=swig
version=3.0.12
release=1
source=(http://downloads.sourceforge.net/swig/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure \
		--prefix=/usr                      \
		--without-clisp                    \
		--libdir=/usr/lib64                \
 		--without-maximum-compile-warnings
	make
	make DESTDIR=$PKG install
}

