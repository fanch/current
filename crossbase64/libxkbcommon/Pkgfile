# description	: keymap compiler and support library
# homepage	: https://xkbcommon.org/
# depends	: xkeyboard-config
# makedepends	: libxcb

name=libxkbcommon
version=0.7.2
release=1
source=(http://xkbcommon.org/download/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--libdir=/usr/lib64 \
		--disable-static
	make
	make DESTDIR=$PKG install
}
